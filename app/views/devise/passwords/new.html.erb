<style type="text/css">  
  #men{ width: 30%; }  
  #me{ width: 30%; }
  #man{ margin-left: 500px; }  
</style>
<div class="container" id="man">  
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",  :class => "form-control", :id => "me"%>
  </div>

  <div>
    <%= f.submit "Send me reset password instructions",  :class => "form-control bg-primary", :id => "men" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>